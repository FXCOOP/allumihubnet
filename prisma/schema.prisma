generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  firstName    String
  lastName     String
  avatarUrl    String?
  city         String?
  country      String?
  currentRole  String?
  bio          String?
  linkedinUrl  String?
  websiteUrl   String?
  canHelpWith  String?
  lookingFor   String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  batches          UserBatch[]
  posts            Post[]
  comments         Comment[]
  events           Event[]
  eventRsvps       EventRsvp[]
  businessProfiles BusinessProfile[]
  threadParticipants DirectMessageThreadParticipant[]
  sentMessages     DirectMessage[]
  polls            Poll[]
  pollVotes        PollVote[]
  jobs             Job[]
  memories         Memory[]
}

model School {
  id        String   @id @default(cuid())
  name      String
  city      String
  country   String
  createdAt DateTime @default(now())

  batches Batch[]
}

model Batch {
  id            String   @id @default(cuid())
  schoolId      String
  year          Int
  displayName   String
  coverImageUrl String?
  description   String?
  createdAt     DateTime @default(now())

  school School      @relation(fields: [schoolId], references: [id])
  users  UserBatch[]
  posts  Post[]
  events Event[]
  polls  Poll[]
  jobs   Job[]
  memories Memory[]
}

model UserBatch {
  id        String   @id @default(cuid())
  userId    String
  batchId   String
  role      String   @default("member") // "member" | "admin"
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  batch Batch @relation(fields: [batchId], references: [id], onDelete: Cascade)

  @@unique([userId, batchId])
}

model Post {
  id        String   @id @default(cuid())
  batchId   String
  authorId  String
  type      String   @default("general") // "general" | "opportunity" | "question"
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  batch    Batch     @relation(fields: [batchId], references: [id], onDelete: Cascade)
  author   User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  comments Comment[]
}

model Comment {
  id        String   @id @default(cuid())
  postId    String
  authorId  String
  content   String
  createdAt DateTime @default(now())

  post   Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  author User @relation(fields: [authorId], references: [id], onDelete: Cascade)
}

model Event {
  id           String    @id @default(cuid())
  batchId      String
  creatorId    String
  title        String
  description  String?
  locationText String?
  startsAt     DateTime
  endsAt       DateTime?
  maxAttendees Int?
  createdAt    DateTime  @default(now())

  batch   Batch       @relation(fields: [batchId], references: [id], onDelete: Cascade)
  creator User        @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  rsvps   EventRsvp[]
}

model EventRsvp {
  id        String   @id @default(cuid())
  eventId   String
  userId    String
  status    String   @default("going") // "going" | "maybe" | "not_going"
  createdAt DateTime @default(now())

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([eventId, userId])
}

model BusinessProfile {
  id               String   @id @default(cuid())
  userId           String
  businessName     String
  category         String
  shortDescription String
  websiteUrl       String?
  phone            String?
  city             String?
  country          String?
  createdAt        DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model DirectMessageThread {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  participants DirectMessageThreadParticipant[]
  messages     DirectMessage[]
}

model DirectMessageThreadParticipant {
  id        String   @id @default(cuid())
  threadId  String
  userId    String
  createdAt DateTime @default(now())

  thread DirectMessageThread @relation(fields: [threadId], references: [id], onDelete: Cascade)
  user   User                @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([threadId, userId])
}

model DirectMessage {
  id        String   @id @default(cuid())
  threadId  String
  senderId  String
  content   String
  createdAt DateTime @default(now())

  thread DirectMessageThread @relation(fields: [threadId], references: [id], onDelete: Cascade)
  sender User                @relation(fields: [senderId], references: [id], onDelete: Cascade)
}

// Polls & Statistics
model Poll {
  id        String   @id @default(cuid())
  batchId   String
  authorId  String
  question  String
  endsAt    DateTime?
  createdAt DateTime @default(now())

  batch   Batch        @relation(fields: [batchId], references: [id], onDelete: Cascade)
  author  User         @relation(fields: [authorId], references: [id], onDelete: Cascade)
  options PollOption[]
}

model PollOption {
  id        String   @id @default(cuid())
  pollId    String
  text      String
  createdAt DateTime @default(now())

  poll  Poll       @relation(fields: [pollId], references: [id], onDelete: Cascade)
  votes PollVote[]
}

model PollVote {
  id        String   @id @default(cuid())
  optionId  String
  userId    String
  createdAt DateTime @default(now())

  option PollOption @relation(fields: [optionId], references: [id], onDelete: Cascade)
  user   User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([optionId, userId])
}

// Job Board
model Job {
  id          String   @id @default(cuid())
  batchId     String
  posterId    String
  title       String
  company     String
  location    String?
  type        String   @default("full-time") // "full-time" | "part-time" | "freelance" | "internship"
  description String
  salary      String?
  contactEmail String?
  contactPhone String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  expiresAt   DateTime?

  batch  Batch @relation(fields: [batchId], references: [id], onDelete: Cascade)
  poster User  @relation(fields: [posterId], references: [id], onDelete: Cascade)
}

// Memories - On This Day
model Memory {
  id        String   @id @default(cuid())
  batchId   String
  authorId  String
  title     String
  content   String
  imageUrl  String?
  memoryDate DateTime
  createdAt DateTime @default(now())

  batch  Batch @relation(fields: [batchId], references: [id], onDelete: Cascade)
  author User  @relation(fields: [authorId], references: [id], onDelete: Cascade)
}
